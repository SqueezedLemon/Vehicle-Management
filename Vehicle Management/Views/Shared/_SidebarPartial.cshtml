@using Microsoft.AspNetCore.Identity
@using Vehicle_Management.Data;
@inject SignInManager<UserManager> SignInManager
@inject UserManager<UserManager> UserManager

@if (User.IsInRole("Admin") || User.IsInRole("Driver"))
{
    <ul class="navbar-nav bg-gradient-danger sidebar sidebar-dark accordion" id="accordionSidebar">
        <a class="sidebar-brand d-flex align-items-center justify-content-center" asp-area="" asp-controller="Home" asp-action="Index">
            <div class="sidebar-brand-icon rotate-n-15">
                <i class="fas fa-car"></i>
            </div>
            <div class="sidebar-brand-text mx-3">Vehicle Management</div>
        </a>
        <!-- Divider -->
        <hr class="sidebar-divider my-0">
        @if (User.IsInRole("Admin"))
        {
            <!-- Nav Item - Dashboard -->
            <li class="nav-item active">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Nav Item - Pages Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="RegisterUser">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Register</span>
                </a>
            </li>

            <!-- Nav Item - Charts -->
            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="ViewRequests">
                    <i class="fas fa-fw fa-chart-area"></i>
                    <span>Requests</span>
                </a>
            </li>

            <!-- Nav Item - Tables -->
            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="ViewVehicles">
                    <i class="fas fa-fw fa-table"></i>
                    <span>Vehicles</span>
                </a>
            </li>

            <!-- Nav Item - Tables -->
            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="AllUsers">
                    <i class="fas fa-fw fa-user"></i>
                    <span>Users</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">


            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
        </div>
        }
    </ul>
}