@model Vehicle_Management.Models.BaseViewModel
@{
    ViewData["Title"] = "EditRequest";
}

@if (Model.UserRequest != null)
{
	@if (Model.UserRequest.IsApproved != true)
	{
		<div class="container">
			<div class="row">
				<div class="col-md-5">
					<h1 class="pt-2">Request Details</h1>
					<form asp-controller="User" asp-action="EditRequest" method="post">
						<input asp-for="UserRequest.Id" type="hidden" class="form-control" required>
						<div class="form-group pb-3">
							<label asp-for="UserRequest.PickupPoint">Pickup Location</label>
							<input asp-for="UserRequest.PickupPoint" type="text" class="form-control" required>
							<span asp-validation-for="UserRequest.PickupPoint" class="text-danger"></span>
						</div>
						<div class="form-group pb-3">
							<label asp-for="UserRequest.PickupPointLandmark">Pickup Point</label>
							<input asp-for="UserRequest.PickupPointLandmark" type="text" class="form-control" required>
							<span asp-validation-for="UserRequest.PickupPointLandmark" class="text-danger"></span>
						</div>
						<div class="form-group pb-3">
							<label asp-for="UserRequest.DropPoint">Drop Location</label>
							<input asp-for="UserRequest.DropPoint" type="text" class="form-control" required>
							<span asp-validation-for="UserRequest.DropPoint" class="text-danger"></span>
						</div>
						<div class="form-group pb-3">
							<label asp-for="UserRequest.DropPointLandmark">Drop Off Point</label>
							<input asp-for="UserRequest.DropPointLandmark" type="text" class="form-control" required>
							<span asp-validation-for="UserRequest.DropPointLandmark" class="text-danger"></span>
						</div>
						<div class="form-group pb-3">
							<label asp-for="UserRequest.RequestedDate">Requested Date</label>
							<input asp-for="UserRequest.RequestedDate" type="date" class="form-control" required>
							<span asp-validation-for="UserRequest.RequestedDate" class="text-danger"></span>
						</div>
						<div class="form-group pb-3">
							<label asp-for="UserRequest.Message">Message</label>
							<textarea asp-for="UserRequest.Message" class="form-control" rows="2" cols="30" required>@Model.UserRequest.Message</textarea>
							<span asp-validation-for="UserRequest.Message" class="text-danger"></span>
						</div>
						<button type="submit" class="btn btn-primary">Edit Request</button>
					</form>
				</div>
			</div>
		</div>
	}
	else
	{
		<h1>Request Not Found</h1>
	}
}
else
{
	<h1>Request Not Found</h1>
}

