@model Vehicle_Management.Models.BaseViewModel
@{
    ViewData["Title"] = "AddVehicle";
}

@if (User.IsInRole("Admin"))
{
	<div class="container">
		<div class="row">
			<div class="col-md-5">
				<h1>New Vehicle Registration</h1>
				<form asp-controller="Home" asp-action="AddVehicle" method="post">
					<div class="form-group pb-3">
						<label asp-for="Vehicle.RegistrationNumber">Registration Number</label>
						<input asp-for="Vehicle.RegistrationNumber" type="text" class="form-control" id="registration-number">
						<span asp-validation-for="Vehicle.RegistrationNumber" class="text-danger"></span>
					</div>
					<div class="form-group pb-3">
						<label asp-for="Vehicle.ManufactureCompany">Manufacture Company</label>
						<input asp-for="Vehicle.ManufactureCompany" type="text" class="form-control" id="manufacture-company">
						<span asp-validation-for="Vehicle.ManufactureCompany" class="text-danger"></span>
					</div>
					<div class="form-group pb-3">
						<label asp-for="Vehicle.VehicleModel">Vehicle Model</label>
						<input asp-for="Vehicle.VehicleModel" type="text" class="form-control" id="vehicle-model">
						<span asp-validation-for="Vehicle.VehicleModel" class="text-danger"></span>
					</div>
					<div class="form-group pb-3">
						<label asp-for="Vehicle.EngineCapacity">Engine Capacity(cc)</label>
						<input asp-for="Vehicle.EngineCapacity" type="number" class="form-control" id="engine-capacity">
						<span asp-validation-for="Vehicle.EngineCapacity" class="text-danger"></span>
					</div>
					<div class="form-group pb-3">
						<label asp-for="Vehicle.ManufacturedYear">Manufactured Year</label>
						<input asp-for="Vehicle.ManufacturedYear" type="number" class="form-control" id="manufactured-year">
						<span asp-validation-for="Vehicle.ManufacturedYear" class="text-danger"></span>
					</div>
					<div class="form-group pb-3">
						<label asp-for="Vehicle.PurchasedOn">Purchased On</label>
						<input asp-for="Vehicle.PurchasedOn" type="date" class="form-control" id="purchased-on" name="PurchasedOn" value="2000-01-15">
						<span asp-validation-for="Vehicle.PurchasedOn" class="text-danger"></span>
					</div>
					<div class="form-group pb-3">
						<label asp-for="Vehicle.Color">Color</label>
						<input asp-for="Vehicle.Color" type="text" class="form-control" id="color">
						<span asp-validation-for="Vehicle.Color" class="text-danger"></span>
					</div>
					<div class="form-group pb-3">
						<label asp-for="Vehicle.EngineNumber">Engine Number</label>
						<input asp-for="Vehicle.EngineNumber" type="text" class="form-control" id="engine-number">
						<span asp-validation-for="Vehicle.EngineNumber" class="text-danger"></span>
					</div>
					<div class="form-group pb-3">
						<label asp-for="Vehicle.ChasisNumber">Chasis Number</label>
						<input asp-for="Vehicle.ChasisNumber" type="text" class="form-control" id="chasis-number">
						<span asp-validation-for="Vehicle.ChasisNumber" class="text-danger"></span>
					</div>
					<div class="form-group pb-3">
						<label asp-for="Vehicle.PassengerCapacity">Passenger Capacity</label>
						<input asp-for="Vehicle.PassengerCapacity" type="number" class="form-control" id="passenger-capacity">
						<span asp-validation-for="Vehicle.PassengerCapacity" class="text-danger"></span>
					</div>
					<div class="form-group pb-4">
						<label asp-for="Vehicle.Fuel">Fuel</label>
						<select asp-for="Vehicle.Fuel" class="form-control" id="fuel">
							<option value="Diesel">Diesel</option>
							<option value="Petrol">Petrol</option>
						</select>
						<span asp-validation-for="Vehicle.Fuel" class="text-danger"></span>
					</div>
					<button type="submit" class="btn btn-primary">Add</button>
				</form>
			</div>
		</div>
	</div>
}
else
{
    <h1>Access Denied</h1>
}

